<f:entry>	
	<f:repeatable var="instance" items="${descriptor.instances}" field="applications">
		<table width="100%">
		<f:entry title="${%Application to deploy on Relution}"
				 field="applicationFile"
				 help="/plugin/Relution/help-applicationFile.html"
				 description="${%This should point to a single file. You may use placeholders, e.g. build/Application_*_*.ipa then the first found file will be used}">
			<f:textbox name="application.applicationFile" value="${application.applicationFile}" />
		</f:entry>
	  
<!-- 		<f:entry title="${%EAS application UUID}" -->
<!-- 				 field="applicationUUID" -->
<!-- 				 description="${%The unique identifier of the application. Log in to the EAS administrator panel to obtain the UUID}"> -->
